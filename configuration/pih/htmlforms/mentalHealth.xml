                        <render acID="CIEL:167110" name="pihcore.thoughtprocess.tangential"/>
                        <render acID="CIEL:167111" name="pihcore.thoughtprocess.flight"/>
                        <render acID="PIH:14653"   name="pihcore.thoughtprocess.looseness"/>
                    </repeat>
                    <br/>

                    <label>
                        <uimessage code="pihcore.mentalhealth.ThoughtContent" />
                    </label>

                    <repeat>
                        <template>
                            <obs conceptId="CIEL:167112	" style="checkbox"
                                 answerConceptId="CIEL:{acID}"
                                 answerCode="{name}"/>
                        </template>
                        <render acID="142600" name="pihcore.thoughtcontent.delusion"/>
                        <render acID="167113" name="pihcore.thoughtcontent.suicidal"/>
                        <render acID="167114" name="pihcore.thoughtcontent.homicidal"/>
                        <render acID="130853" name="Paranoia"/>
                        <render acID="133436" name="pihcore.thoughtcontent.negativism"/>
                    </repeat>
                    <br/>

                    <p class="side-by-side">
                        <label>
                            <uimessage code="pihcore.mentalhealth.insight" />
                        </label>
                        <obs conceptId="CIEL:167115" style="radio"
                             answerConceptIds="CIEL:159406,CIEL:159405,CIEL:159407"
                             answerCodes="pihcore.fair,pihcore.good,pihcore.poor"/>
                    </p>

                    <p class="side-by-side">
                        <label>
                            <uimessage code="pihcore.mentalhealth.judgement" />
                        </label>
                        <obs conceptId="CIEL:167116" style="radio"
                             answerConceptIds="CIEL:159406,CIEL:159405,CIEL:159407"
                             answerCodes="pihcore.fair,pihcore.good,pihcore.poor" />
                    </p>
                    <br/>
                    <p class="comment-label">
                        <uimessage code="pihcore.exam.comment"/>
                    </p>

                    <p class="comment-field">
                        <p>
                            <obs conceptId="CIEL:163044" rows="5" cols="25"/>
                        </p>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!--Suicide Risk-->
    <section id="mh-suicide" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.mentalhealth.suicideEval">
        <div class="section-container">

            <table>
                <tr>
                    <th></th>
                    <th>
                        <label>
                            <uimessage code="pihcore.mentalhealth.suicideIdea"/>
                        </label>
                    </th>
                    <th>
                        <label>
                            <uimessage code="pihcore.mentalhealth.suicideAttempt"/>
                        </label>
                    </th>
                </tr>
                <tr>
                    <th>
                        <label>
                            <uimessage code="pihcore.past.label"/>
                        </label>
                    </th>
                    <td>
                        <!-- History of suicidal thoughts/ideation -->
                        <p class="side-by-side">
                            <!-- Todo:  Change report from CIEL:1628 to CIEL:165529 -->
                            <obs conceptId="CIEL:165529" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                                 answerCodes="Yes,No" answerSeparator="" required="true"/>
                        </p>
                    </td>
                    <td>
                        <!-- History of suicide attempt -->
                        <p class="side-by-side">
                            <!-- Todo:  Change report from CIEL:1628 to CIEL:129176 -->
                            <obs conceptId="CIEL:129176" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                                 answerCodes="Yes,No" answerSeparator="" required="true"/>
                        </p>
                    </td>
                </tr>
                <tr>
                    <th>
                        <label>
                            <uimessage code="pihcore.current.label"/>
                        </label>
                    </th>
                    <td>
                        <!-- Suicidal ideation -->
                        <p class="side-by-side">
                            <obs conceptId="CIEL:125562" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                                 answerCodes="Yes,No" answerSeparator="" required="true"/>
                        </p>
                    </td>
                    <td>
                        <!-- Suicide attempt -->
                        <p class="side-by-side">
                            <obs conceptId="CIEL:148143" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                                 answerCodes="Yes,No" answerSeparator="" required="true"/>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                    </td>
                    <td>

                        <!-- Date of suicide attempt -->
                        <label>
                            <uimessage code="pihcore.mentalhealth.dateSuicideAttempt"/>
                        </label>
                        <obs conceptId="CIEL:165530"/>
                    </td>
                </tr>
            </table>

            <p class="side-by-side">
                <label>
                    <uimessage code="Psychosocial counseling"/>
                </label>
                <obs conceptId="PIH:PSYCHOSOCIAL COUNSELING" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                     answerCodes="Yes,No" answerSeparator=""/>
            </p>
        </div>
    </section>

    <!--Diagnoses-->
    <section id="mh-diagnoses" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.diagnoses.label">
        <div class="section-container">
            <p>
                <obs conceptId="PIH:Mental health diagnosis" answerConceptSetIds="PIH:HUM Psychological diagnosis"
                     style="autocomplete" required="true"/>
            </p>
            <div class="three-columns">
                <div>
                    <obs conceptId="PIH:Mental health diagnosis" answerConceptSetIds="PIH:HUM Psychological diagnosis"
                         style="autocomplete"/>
                </div>
                <div>
                    <obs conceptId="PIH:Mental health diagnosis" answerConceptSetIds="PIH:HUM Psychological diagnosis"
                         style="autocomplete"/>
                </div>
                <div>
                    <obs conceptId="PIH:Mental health diagnosis" answerConceptSetIds="PIH:HUM Psychological diagnosis"
                         style="autocomplete"/>
                </div>
            </div>
            <br/>

            <p>
                <obs conceptId="PIH:Mental health diagnosis" answerConceptId="PIH:OTHER"
                     answerCode="Other diagnosis"
                     style="checkbox" commentFieldLabel=""/>
            </p>
        </div>
    </section>

    <!--Improvement-->
    <section id="mh_improvements" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Improvement">

        <div class="section-container">

            <obsgroup groupingConceptId="CIEL:161245">
                <p class="side-by-side">
                    <label>
                        <uimessage code="pihcore.mentalhealth.epilepsySeizureFrequency"/>:
                    </label>
                    <span class="small">
                        <obs conceptId="PIH:6797"/>
                        <uimessage code="permonth"/>
                    </span>
                </p>
            </obsgroup>

            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.mentalhealth.cgis"/> (Severity):
                </label>
                <br/>
                <obs conceptId="CIEL:163222" style="radio"
                     answers="0,1,2,3,4,5,6,7"
                     answerLabels="0 = Not assessed,1 = Normal,2 = Borderline mentally ill,3 = Mildly ill,4 = Moderately ill,5 = Markedly ill,6 = Severely ill,7 = Most extreme"
                     answerSeparator="&lt;br&gt;" />
            </p>

            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.mentalhealth.cgii"/> (Improvement):
                </label>
                <br/>
                <obs conceptId="CIEL:163223" style="radio"
                     answers="0,1,2,3,4,5,6,7"
                     answerLabels="0 = Not assessed,1 = Very much improved,2 = Much improved,3 = Minimally improved,4 = No change,5 = Minimally worse,6 = Much worse,7 = Very much worse"
                     answerSeparator="&lt;br&gt;"/>
            </p>

            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.mentalhealth.cgie"/> (Efficacy):
                </label>
                <br/>
                <span>
                    <obs conceptId="CIEL:163224" style="radio"
                         answers="0,1,2,3"
                         answerLabels="0 = None,1 = Do not significantly interfere with patient FUNCTIONING,2 = Significantly interfere with patient FUNCTIONING,3 = Outweighs Therapeutic effects with patient's FUNCTIONING"
                         answerSeparator="&lt;br&gt;" />
                </span>
            </p>

        </div>
    </section>

    <section id="mh-interventions" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.mentalhealth.interventions">
        <div class="section-container">
            <repeat with="['CIEL:167213','Common Elements Treatment Approach (CETA)'],
                          ['PIH:14533','Motivational interviewing'],
                          ['CIEL:165973','Psychological First Aid (PFA)'],
                          ['CIEL:165424','Cognitive Behavioral Therapy (CBT)'],
                          ['PIH:PSYCHOSOCIAL COUNSELING','Psychosocial counseling'],
                          ['PIH:Interpersonal Therapy','Interpersonal psychotherapy'],
                          ['PIH:Relaxation','Relaxation'],
                          ['CIEL:165484','Deep breathing techniques'],
                          ['CIEL:165485','Progressive muscle relaxation'],
                          ['PIH:Psychoeducation','Psychoeducation'],
                          ['PIH:Parenting skills','Parenting skills training'],
                          ['PIH:Grief counseling','Grief counseling']">
                <obs conceptId="PIH:Mental health intervention" answerConceptId="{0}"
                     answerCode="{1}"/>
            </repeat>

            <obs conceptId="PIH:Mental health intervention" answerConceptId="PIH:OTHER"
                 commentFieldLabel=""/>
        </div>
    </section>

    <ifMode mode="VIEW" include="false">
        <style>
            .doseInput select, .frequency select, .duration-unit select {
                width: 100px;
            }

            .route select {
                width: 150px;
            }
        </style>
    </ifMode>

    <!--Medication-->
    <section id="drug-orders" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.visitNote.orders.medications">
        <div class="section-container">
            <subform path="configuration/pih/subforms/drug-order-widget-mental-health.xml"/>
        </div>
        <div class="section-container">
            <label><b><uimessage code="pihcore.remarks"/></b></label>
            <p>
                <obs conceptId="PIH:10637" cols="50" rows="5" />
            </p>
        </div>
    </section>

    <!--Outcome-->
    <section id="mh-Outcome" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.outcome">
        <div class="section-container">

            <includeIf velocityTest="$patient.gender == 'F' ">

                <!-- Pregnant -->
                <obs conceptId="CIEL:5272" toggle="pregnant"
                     answerConceptId="CIEL:1065"
                     answerCode="pihcore.pregnancy.status"
                     style="checkbox"/>

                <div id="pregnant" class="two-columns">
                    <div>
                            <label>
                                <uimessage code="pihcore.pregnancy.lastPeriod"/>
                            </label>
                            <obs id="lastPeriodDate" conceptId="CIEL:1427"/>
                    </div>
                    <div>
                            <label>
                                <uimessage code="pihcore.pregnancy.dueDate"/>
                            </label>
                            <obs id="edd" conceptId="CIEL:5596" allowFutureDates="true" allowPastDates="false"/>
                    </div>
                </div>

                <div class="two-columns hidden calculated-edd-and-gestational" id="calculated-edd-and-gestational">
                    <div>
                        <span id="calculated-gestational-age-wrapper">
                            <span id="calculated-gestational-age-label">
                                <uimessage code="pihcore.calculatedGestationalAge"/>:&#160;
                            </span>
                            <span id='calculated-gestational-age-value' class="calculated-gestational-age-value value"></span>
                        </span>
                    </div>
                    <div>
                        <span id="calculated-edd-wrapper">
                            <span id="calculated-edd-label">
                                <uimessage code="pihcore.calculatedEstimatedDeliveryDate"/>:&#160;
                            </span><br/>
                            <span id='calculated-edd' class="calculated-edd value"></span>
                        </span>
                    </div>
                </div>

                <br/>
            </includeIf>

            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.mentalhealth.hasCHW"/>
                </label>
                <obs conceptId="PIH:3293" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                     answerCodes="Yes,No" answerSeparator="" required="true"/>
            </p>

            <p class="side-by-side">
                <div id="disposition">
                    <encounterDisposition />
                </div>
            </p>

            <p>
                <label>
                    <uimessage code="pihcore.consult.returnVisitDate"/>:
                </label>
                <span class="small">
                    <obs id="return-visit-date" conceptId="PIH:RETURN VISIT DATE" allowFutureDates="true" allowPastDates="false" />
                </span>
            </p>
        </div>
    </section>


    <ifMode mode="VIEW" include="false">
        <div id="buttons">
            <submit submitClass="confirm right" submitCode="mirebalais.save"/>
            <button type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>
