<htmlform id="newborn-assessment"
          formUuid="6575f0e6-fcae-47ef-9838-4129e60e2cbb"
          htmlformUuid="ac4c6416-5474-4b38-a4f2-2f316f76ee73"
          formName="Newborn Exam"
          formEncounterType="7e42e652-89e7-4559-80fd-41f42826c98c" formVersion="1.0">

    <translations defaultLocale="en">
        <code name="o2Sat">
            <variant locale="en" value="O&lt;sub&gt;2&lt;/sub&gt; Sat"/>
            <variant locale="fr" value="SpO&lt;sub&gt;2&lt;/sub&gt;"/>
            <variant locale="es" value="SatO&lt;sub&gt;2&lt;/sub&gt;"/>
        </code>
    </translations>

    <style type="text/css">

        #who-when-where {
            margin-bottom: 6px;
            border-bottom: 1px solid #ccc;
        }

        #who-when-where p {
            display: inline-block;
            padding-right: 20px;
        }

        #where > input[type=text] {
            display: inline-block;
        }

        .field-error {
            color: #ff6666;
            font-size: 1.1em;
            display: block;
        }

        form fieldset {
            min-width: 90%
        }

        #encounterDate input {
            min-width: 15%
        }

        textarea {
            overflow-y: hidden; /* fixes scrollbar flash - kudos to @brettjonesdev */
            padding-top: 1.1em; /* fixes text jump on Enter keypress */
        }

        @media print {
            .print-form-datestamps { display: block !important }
            button.cancel, button.submit { display: none }
            label { font-weight: bold }
            label[for] { font-weight: normal } /* refers to the radio set label */
        }

        .section-container {
            background: #F2F2F2;
            box-shadow: 3px 3px 3px 1px rgba(0, 0, 0, 0.2);
            padding: 10px 5px 10px 15px;
            line-height: 1.5em; /*add this for vertical spacing between elements*/
        }

        .section-container input[type="checkbox"] {
            margin: 0px 5px; /*changed values to vertical, horizontal*/
            top:5px; /*added to offset the checkbox position to line up*/
        }

        .section-container label { /*new definition to override labels inside section-containers*/
            margin: 0px;
        }

        - .section {
            width: 100%;
        }

        .side-by-side label {
            display: inline-block;
        }

        form input[type="radio"], .form input[type="radio"] {
            float: none;
            display: inline-block;
        }

        .five-columns, .four-columns, .three-columns, .two-columns {
            display: table;
            height: 100%;
            width: 100%;
        }

        .two-columns > div {
            display: table-cell;
            width: 50%;
        }

        .three-columns > div {
            display: table-cell;
            width: 33%;
        }

        .four-columns > div {
            display: table-cell;
            width: 25%;
        }

        .five-columns > div {
            display: table-cell;
            width: 20%;
        }

        <ifMode mode="VIEW" include="false">
            .date-one-line {
                display: flex;
            }

            .date-one-line label {
                align-self: center;
                margin-right: 1em;
            }

            .date-one-line span {
                display: flex;
            }

            .hasDatepicker {
                min-width: 120px;
                margin-top: 0px;
            }

            .hfe-hours, .hfe-minutes, .hfe-seconds {
                width: 70px;
                min-width: 70px;
                margin: 0px 10px 0px 10px;
            }
        </ifMode>
    </style>

    <div class="print-form-datestamps" style="display:none">
        <p><uimessage code="pihcore.form.created_on"/>:
            <lookup complexExpression="$form.dateCreated"/>
        </p>
        <p><uimessage code="pihcore.form.last_updated_on"/>:
            <lookup complexExpression="$form.dateChanged"/>
        </p>
        <p><uimessage code="pihcore.form.printed_on"/>:
            <lookup complexExpression="$formGeneratedDatetime"/>
        </p>
    </div>

    <ifMode mode="VIEW" include="false">
        <h2>
            <label>
                <uimessage code="pih.task.newbornExam"/>
            </label>
        </h2>

        <!-- users with retroConsultNote privilege can edit provider, location, and date for both retro and active visits -->
        <includeIf velocityTest="$user.hasPrivilege('Task: emr.retroConsultNote')">
            <div id="who-when-where">
                <p id="who">
                    <label>
                        <uimessage code="emr.patientDashBoard.providerRequired"/>
                    </label>
                    <span>
                        <encounterProviderAndRole default="currentUser"
                                                  encounterRole="4f10ad1a-ec49-48df-98c7-1391c6ac7f05" required="true"/>
                    </span>
                </p>
                <p id="where">
                    <label>
                        <uimessage code="emr.locationRequired"/>
                    </label>
                    <span>
                        <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"
                                           tags="Maternal and Child Location"/>
                    </span>
                </p>
                <p id="when">
                    <label>
                        <uimessage code="emr.patientDashBoard.date"/>
                    </label>
                    <span>
                        <encounterDate id="encounterDate" default="now"/>
                    </span>
                </p>
            </div>
        </includeIf>

        <!-- users with retroConsultNoteThisProviderOnly can edit location and date (but not provider) for retro visits -->
        <includeIf
                velocityTest="$user.hasPrivilege('Task: emr.retroConsultNoteThisProviderOnly') and !($user.hasPrivilege('Task: emr.retroConsultNote')) and (!$visit.open)">
            <div style="display:none">
                <encounterProviderAndRole default="currentUser" encounterRole="4f10ad1a-ec49-48df-98c7-1391c6ac7f05"
                                          required="true"/>
            </div>

            <div id="who-when-where">
                <p id="who">
                    <label>
                        <uimessage code="emr.patientDashBoard.provider"/>
                    </label>
                    <span>
                        <lookup expression="user.person.personName"/>
                    </span>
                </p>
                <p id="where">
                    <label>
                        <uimessage code="emr.locationRequired"/>
                    </label>
                    <span>
                        <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"
                                           tags="Maternal and Child Location"/>
                    </span>
                </p>
                <p id="when">
                    <label>
                        <uimessage code="emr.patientDashBoard.date"/>
                    </label>
                    <span>
                        <encounterDate id="encounterDate" default="now"/>
                    </span>
                </p>
            </div>
        </includeIf>

        <!-- all users that don't have either retro privilege, or those with retro-this-provider-only but with an active visit, can only edit location -->
        <includeIf velocityTest="(!$user.hasPrivilege('Task: emr.retroConsultNoteThisProviderOnly') and !$user.hasPrivilege('Task: emr.retroConsultNote')) or ($user.hasPrivilege('Task: emr.retroConsultNoteThisProviderOnly') and !$user.hasPrivilege('Task: emr.retroConsultNote') and $visit.open)">
            <div style="display:none">
                <encounterProviderAndRole default="currentUser" encounterRole="4f10ad1a-ec49-48df-98c7-1391c6ac7f05"
                                          required="true"/>
                <encounterDate id="encounterDate" default="now"/>
            </div>
            <div id="who-when-where">
                <table id="who-where-when-view">
                    <tr>
                        <td>
                            <label>
                                <uimessage code="emr.patientDashBoard.provider"/>
                            </label>
                            <span>
                                <lookup complexExpression="#if($encounter) $ui.format($encounter.provider) #else $ui.format($user.person) #end"/>
                            </span>
                        </td>
                        <td>
                            <label>
                                <uimessage code="emr.locationRequired"/>
                            </label>
                            <span>
                                <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"
                                                   tags="Maternal and Child Location"/>
                            </span>
                        </td>
                        <td>
                            <label>
                                <uimessage code="emr.patientDashBoard.date"/>
                            </label>
                            <span>
                                <lookup complexExpression="#if($encounter) $ui.format($fn.startOfDay($encounter.encounterDatetime)) #else $ui.format($fn.startOfDay($formGeneratedDatetime)) #end"/>
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </includeIf>
    </ifMode>

    <section id="Overview" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Newborn overview">
        <div class="section-container">
            <p id="when" class="date-one-line">
                <label>
                    <uimessage code="Date &amp; time of delivery"/>
                </label>
                <includeIf velocityTest="($fn.latestObs('CIEL:5599')) ">
                    <!-- ToDo:  Show date AND time -->
                    <lookup expression="fn.latestObs('CIEL:5599').valueDatetime"/>
                </includeIf>
            </p>

            <includeIf velocityTest="($fn.latestObs('PIH:11663')) ">
                <p class="side-by-side">
                    <label>
                        <uimessage code="Type of delivery"/>:
                    </label>
                    <lookup complexExpression="$fn.latestObs('PIH:11663').valueCoded.name"/>
                </p>
            </includeIf>

            <div id="alive-details">
                    <!-- APGAR -->
                    <div class="three-columns">
                        <div class="apgar">
                            <label>
                                <uimessage code="pihcore.mch.apgarScore1"/>
                            </label>
                            <includeIf velocityTest="($fn.latestObs('PIH:14419')) ">
                            <!-- APGAR at 1 minutes -->
                            <lookup complexExpression="$fn.latestObs('PIH:14419').valueNumeric"/>
                            (<lookup expression="fn.latestObs('PIH:14419').obsDatetime"/>)
                            </includeIf>
                        </div>
                        <div class="apgar">
                            <label>
                                <uimessage code="pihcore.mch.apgarScore"/>
                            </label>
                            <includeIf velocityTest="($fn.latestObs('CIEL:159604')) ">
                            <!-- APGAR at 5 minutes <obs conceptId="CIEL:159604"/> -->
                            <lookup complexExpression="$fn.latestObs('CIEL:159604').valueNumeric"/>
                            (<lookup expression="fn.latestObs('CIEL:159604').obsDatetime"/>)
                            </includeIf>
                        </div>

                        <div class="apgar">
                            <label>
                                <uimessage code="pihcore.mch.apgarScore10"/>
                            </label>
                            <includeIf velocityTest="($fn.latestObs('PIH:14785')) ">
                            <!-- APGAR at 10 minutes <obs conceptId="PIH:14785"/> -->
                            <lookup complexExpression="$fn.latestObs('PIH:14785').valueNumeric"/>
                            (<lookup expression="fn.latestObs('PIH:14785').obsDatetime"/>)
                            </includeIf>
                        </div>
                    </div>
                    <br/>
            </div>

            <!-- Resuscitated -->
            <includeIf velocityTest="($fn.latestObs('CIEL:162131')) ">
                <p class="side-by-side">
                    <label>
                        <uimessage code="pihcore.neoResusc"/>:
                    </label>
                    <lookup complexExpression="$fn.latestObs('CIEL:162131').valueCoded.name"/>
                    (<lookup expression="fn.latestObs('CIEL:162131').obsDatetime"/>)
                </p>
            </includeIf>

            <p>
                <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                    <obs conceptId="PIH:DIAGNOSIS" style="checkbox"
                         answerConceptId="CIEL:115491" answerCode="Twins or multiple"/>
                </obsgroup>
            </p>
        </div>
    </section>

    <section id="exam" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Physical exam">
        <div class="section-container">
            <p id="rbg">
                <label>
                    <uimessage code="Random blood glucose (RBG)" />
                </label>
                <obs conceptId="CIEL:887" showUnits="true"/>
            </p>

            <p>
                <h4>
                    <uimessage code="Umbilical cord"/>
                </h4>
                <div class="two-columns">
                    <div>
                        <p class="side-by-side">
                            <!-- ToDo:  Add more answers PIH:3647 (dry), PIH:1670 (sticky) -->
                            <obs conceptId="CIEL:168721" style="radio"
                                 answerConceptIds="PIH:Clean,PIH:3647,PIH:1670"
                                 answerSeparator="&lt;br /&gt;"/>
                            <!-- answerCode="Clean,Dry,Sticky"/ -->
                        </p>
                    </div>
                    <div>
                        <label>Comments</label>
                        <obs conceptId="CIEL:168722" style="text" />
                    </div>
                </div>
            </p>

            <p>
                <h4>
                    <uimessage code="Eyes"/>
                </h4>
                <div class="two-columns">
                    <div>
                        <p class="side-by-side">
                            <!-- ToDo:  Add more answers CIEL:127777 (Red eyes) -->
                            <obs conceptId="CIEL:163309" style="radio"
                                 answerConceptIds="PIH:15107,PIH:1670"
                                 answerSeparator="&lt;br /&gt;"/>
                            <!-- answerCodes="Clear,(Red,)Sticky"/ -->
                        </p>
                    </div>
                    <div>
                        <label>Comments</label>
                        <obs conceptId="CIEL:168722" style="text" />
                    </div>
                </div>
            </p>

            <p>
                <h4>
                    <uimessage code="Skin color"/>
                </h4>
                <div class="two-columns">
                    <div>
                        <p class="side-by-side">
                            <obs conceptId="CIEL:1120" style="radio"
                                 answerConceptIds="CIEL:1115,CIEL:143050,CIEL:115368"
                                 answerSeparator="&lt;br /&gt;"
                                 answerCodes="Normal (pink),Cyanosis (blue),Jaundice" />
                        </p>
                    </div>
                    <div>
                        <label>Comments</label>
                        <obs conceptId="CIEL:160981" style="text" />
                    </div>
                </div>
            </p>

            <p>
                <h4>
                    <uimessage code="Urination"/>
                </h4>
                <div class="two-columns">
                    <div>
                        <p class="side-by-side">
                            <obs conceptId="CIEL:166358" style="radio"
                                 answerConceptIds="CIEL:1115,CIEL:148566"
                                 answerSeparator="&lt;br /&gt;"
                                 answerCodes="Normal (passed urine),Anuria (No urination)"/>
                        </p>
                    </div>
                    <div>
                        <label>Comments</label>
                        <obs conceptId="CIEL:166363" style="text" />
                    </div>
                </div>
            </p>

            <p class="side-by-side">
                <h4>
                    <uimessage code="Stool"/>
                </h4>
                <div class="two-columns">
                    <div>
                        <p class="side-by-side">
                            <obs conceptId="CIEL:163640" style="radio"
                                 answerConceptIds="PIH:15112,CIEL:160910,CIEL:1107"
                                 answerSeparator="&lt;br /&gt;" />
                            <!-- answerCodes="Meconium,Brown/Green,Yellow,None"/ -->
                        </p>
                    </div>
                    <div>
                        <label>Comments</label>
                        <obs conceptId="CIEL:160965" style="text" />
                    </div>
                </div>
            </p>

            <h4>
                <uimessage code="Feeding method"/>
            </h4>
            <p class="side-by-side">
                <!-- ToDo:  Add more answers (spoon,cup) -->
                <obs conceptId="CIEL:1151" style="radio"
                     answerConceptIds="CIEL:5632,CIEL:5254,CIEL:162380"
                     answerCodes="Breastfed,Formula,Tube"/>
            </p>
        </div>
    </section>

    <section id="vitals" sectionTag="fieldset" headerTag="legend"
             headerStyle="title" headerCode="pihcore.vitalSigns">
        <div class="section-container">
            <table>
                <tr>
                    <td>
                        <div class="three-columns">
                            <div>
                                <p class="side-by-side">
                                    <label>
                                        <uimessage code="Weight"/>
                                    </label>
                                    <includeIf velocityTest="($fn.latestObs('CIEL:5089')) ">
                                        <lookup complexExpression="$fn.latestObs('CIEL:5089').valueNumeric"/>kg
                                        (<lookup expression="fn.latestObs('CIEL:5089').obsDatetime"/>)
                                    </includeIf>
                                    <br/>
                                    <span class="small">
                                        <obs conceptId="CIEL:5089" id="weight_kg" showUnits="emr.units.kilograms"
                                             unitsCssClass="append-to-value"/>
                                    </span>
                                </p>

                                <includeIf velocityTest="($fn.latestObs('CIEL:5916')) ">
                                    <p class="side-by-side">
                                        <label>
                                            <uimessage code="Birth Weight:"/>
                                        </label>
                                        <lookup complexExpression="$fn.latestObs('CIEL:5916').valueNumeric"/>kg
                                        (<lookup expression="fn.latestObs('CIEL:5916').obsDatetime"/>)
                                    </p>
                                </includeIf>
                            </div>
                            <div>
                                <label>
                                    <uimessage code="Temperature"/>
                                </label>
                                <span class="small">
                                    <obs conceptId="CIEL:5088" id="temperature_c"
                                         showUnits="emr.units.degreesCelsius" unitsCssClass="append-to-value"/>
                                </span>
                            </div>

                            <div>
                                <label>
                                    <uimessage code="mirebalais.vitals.short.heartRate.title"/>
                                </label>
                                <span class="small">
                                    <obs conceptId="CIEL:5087" id="heart_rate"
                                         showUnits="emr.units.perMinute" unitsCssClass="append-to-value"/>
                                </span>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </section>

    <section id="assessment" sectionTag="fieldset"
             headerTag="legend" headerStyle="title" headerCode="Assessment">
        <div class="section-container">


            <p>
                <label>
                    <uimessage code="Diagnosis at birth"/>
                </label>
                <repeat>
                    <template>
                        <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                            <obs conceptId="PIH:DIAGNOSIS" style="checkbox" answerConceptId="{dx}"/>
                        </obsgroup>
                    </template>

                    <render dx="CIEL:142015" name="Placental abnormality"/>
                    <render dx="CIEL:115939" name="Malpresentation of fetus"/>
                    <render dx="CIEL:145935" name="Cephalopelvic disproportion"/>
                    <render dx="CIEL:116222" name="Low birth weight"/>
                    <render dx="CIEL:113841" name="Premature"/>
                    <render dx="CIEL:127639" name="Respiratory distress"/>
                    <render dx="PIH:7557"    name="Birth asphyxia"/>
                    <render dx="CIEL:118256" name="Fetal distress"/>
                    <render dx="CIEL:116642" name="Intra-uterine fetal demise"/>
                    <render dx="CIEL:129211" name="Premature rupture of membranes"/>
                    <render dx="CIEL:115866" name="Meconium aspiration" />
                </repeat>

                <!-- Congenital malformation -->
                <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                    <obs id="malformation-q" conceptId="PIH:DIAGNOSIS" style="checkbox" answerConceptId="CIEL:143849">
                        <controls>
                            <when value="CIEL:143849" thenDisplay="#malformation-details"/>
                        </controls>
                    </obs>
                </obsgroup>
                <div id="malformation-details">
                    <label>
                        <uimessage code="Specify malformation(s):" />
                    </label>
                    <obs conceptId="PIH:15086" style="text" />
                </div>
            </p>

            <!-- birth injury/trauma -->
            <label>
                <uimessage code="pihcore.birthInjury" />
            </label>
            <div class="two-columns">
                <div>
                    <p class="side-by-side">
                        <obs id="birthInjury" conceptId="CIEL:147277" style="radio"
                             answerConceptIds="CIEL:1065,CIEL:1066">
                            <controls>
                                <when value="CIEL:1065" thenDisplay="#birthInjury-details"/>
                            </controls>
                        </obs>
                    </p>
                </div>
                <div id="birthInjury-details">
                    <label>
                        <uimessage code="Birth injury details" />
                    </label>
                    <obs conceptId="CIEL:160686" style="textarea" />
                </div>

            </div>
        </div>
    </section>

