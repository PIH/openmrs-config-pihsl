                                     answerCode="pihcore.{csName}"/>
                            </template>
                            <render csState="CIEL:162130" csName="clean"/>
                            <render csState="CIEL:441" csName="dressed"/>
                            <render csState="CIEL:151596" csName="redress"/>
                            <render csState="CIEL:162129" csName="healingIntact"/>
                            <render csState="CIEL:150632" csName="abscess"/>
                            <render csState="CIEL:163799" csName="openWoundEdges"/>
                            <render csState="CIEL:1175" csName="na"/>
                            <render csState="CIEL:5622" csName="other"/>
                        </repeat>
                    </p>

                    <!-- Perineum -->
                    <p class="side-by-side">
                        <!-- Perineum intact -->
                        <label>
                            <uimessage code="pihcore.perineumIntact"/>
                        </label>
                        <br/>
                        <obs conceptId="CIEL:160089" style="radio"
                             answerConceptIds="CIEL:1065,CIEL:1066,CIEL:1175"
                             answerCodes="yes,no,pihcore.na"/>

                        <br/><br/>
                        <!-- Perineum wound -->
                        <label>
                            <uimessage code="pihcore.perineumWoundInfection"/>
                        </label>
                        <br/>
                        <obs conceptId="PIH:14065" style="radio"
                             answerConceptIds="CIEL:1065,CIEL:1066,CIEL:1175"
                             answerCodes="yes,no,pihcore.na"/>

                    </p>

                    <div class="exam">
                        <p>
                        <label>
                            <uimessage code="pihcore.breast"/>
                        </label>
                        <repeat>
                            <template>
                                <obs conceptId="CIEL:159780" style="checkbox"
                                     answerConceptId="{finding}" answerCode="pihcore.{name}"/>
                            </template>
                            <render finding="PIH:14061"   name="goodMilk"/>
                            <render finding="CIEL:140103" name="crackNip"/>
                            <render finding="CIEL:118620" name="engorgedBreast"/>
                            <render finding="CIEL:115914" name="mastitis"/>
                            <render finding="CIEL:115099" name="breastAbscess"/>
                        </repeat>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="Checklist" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Checklist">
        <div class="section-container">
            <p>
                <label>
                    <uimessage code="pihcore.mentalhealth.mood.short" />
                </label>

                <repeat>
                    <template>
                        <obs conceptId="CIEL:167099	" style="checkbox"
                             answerConceptId="CIEL:{acID}"
                             answerCode="{name}"/>
                    </template>
                    <render acID="119537" name="Depressed"/>
                    <render acID="167100" name="Neutral"/>
                    <render acID="166050" name="Elevated"/>
                    <render acID="121543" name="Anxious"/>
                    <render acID="6023" name="Irritable"/>
                </repeat>
                <br/>
            </p>

            <p class="side-by-side">
                <label>
                    <uimessage code="Bowels"/>
                </label>
                <obs conceptId="CIEL:163188" style="radio"
                     answerConceptIds="CIEL:1115,CIEL:1116"
                     answerCodes="normal,abnormal"/>
            </p>

            <div class="two-columns">
                <div>
                    <p class="side-by-side">
                        <label>
                            <uimessage code="Urination"/>
                        </label>
                        <br/>
                        <obs conceptId="CIEL:166358" style="radio"
                             answerConceptIds="CIEL:1115,CIEL:148566"
                             answerSeparator="&lt;br /&gt;"
                             answerCodes="Normal (passed urine),Anuria (No urination)"/>
                    </p>
                </div>
                <div>
                    <label>Comments about urination</label>
                    <obs conceptId="CIEL:166363" style="text" />
                </div>
            </div>

            <p class="list-inline">
                <obsgroup groupingConceptId="PIH:14875" showIfEmpty="false">
                    <obs id="leg-pain" style="radio"
                         conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT"
                         conceptLabels="yes,no"
                         answerConceptId="CIEL:114395" labelText="Leg pain">
                    </obs>
                </obsgroup>
            </p>

            <p class="date-one-line">
                <label>
                    <uimessage code="Pain level (0-10)" />
                </label>
                <span class="small">
                    <obs conceptId="PIH:Pain Score" />
                </span>
            </p>
        </div>
    </section>

    <section id="health-ed" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Health education">
        <div class="section-container">
            <div>
                <div>
                    <p class="list-inline-wide">
                        <label>
                            <uimessage code="Family planning counselling"/>
                        </label>
                        <obs conceptId="CIEL:1382" style="radio"
                             answerConceptIds="CIEL:1065,CIEL:1066"
                             answerCodes="yes,no"/>
                    </p>

                    <p class="list-inline-wide">
                        <label>
                            <uimessage code="Accepts and receives family planning"/>
                        </label>
                        <obs id="accepts-fp" conceptId="CIEL:166421" style="radio"
                             answerConceptIds="CIEL:1065,CIEL:1066"
                             answerCodes="yes,no">
                            <controls>
                                <when value="CIEL:1065" thenDisplay="#family-method"/>
                            </controls>
                        </obs>
                    </p>
                </div>

                <div id="family-method" class="two-columns">
                    <div>
                        <p class="side-by-side">
                            <label>
                                <uimessage code="pihcore.fpMethod"/>
                            </label>
                            <br/>
                            <obsgroup groupingConceptId="PIH:Family planning construct">
                                <obs id="fp-meth" conceptId="CIEL:374"
                                     answerConceptIds="CIEL:159783,CIEL:80784,CIEL:5277,CIEL:190,CIEL:907,CIEL:5275,CIEL:1873,CIEL:1472,CIEL:136163"
                                     answerCodes="Combined oral contraceptive (COC),Progestin-only pill (POP),pihcore.fp.rhythm,Condoms,Depo-provera,pihcore.fp.iud,Implant,pihcore.fp.tubalLig,pihcore.fp.breast"
                                     style="radio" answerSeparator="&lt;br /&gt;">
                                    <controls>
                                        <when value="CIEL:1873" thenDisplay="#implant-date"/>
                                        <when value="CIEL:5275" thenDisplay="#implant-date"/>
                                    </controls>
                                </obs>
                            </obsgroup>
                        </p>
                    </div>

                    <div id="implant-date">
                        <label>
                            <uimessage code="pihcore.dateImplant"/>:
                        </label>
                        <obs conceptId="PIH:3203" />
                    </div>
                </div>
            </div>

            <div>
                <p class="list-inline-wide">
                    <label>
                        <uimessage code="Breastfeeding education"/>
                    </label>
                    <obs conceptId="CIEL:1910" style="radio"
                         answerConceptIds="CIEL:1065,CIEL:1066"
                         answerCodes="yes,no" />
                </p>

                <p class="list-inline-wide">
                    <label>
                        <uimessage code="Danger signs education"/>
                    </label>
                    <obs conceptId="CIEL:161541" style="radio"
                         answerConceptIds="CIEL:1065,CIEL:1066"
                         answerCodes="yes,no" />
                </p>

            </div>
        </div>
    </section>

    <section id="summary" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Summary">
        <div class="section-container">

            <p class="side-by-side">
                <label>
                    <uimessage code="Overall condition"/>
                </label>
                <obs id="outcome-condition" conceptId="CIEL:160116" style="radio"
                     answerConceptIds="CIEL:160113,CIEL:160115"/>
            </p>

            <label>
                <uimessage code="pih.app.notes.summary" />
            </label>
            <obs conceptId="CIEL:161011" style="textarea" />

        </div>
    </section>

