    <ifMode mode="ENTER" include="true">
        <script type="text/javascript">
            jq(document).ready(function() {
                const aliveConceptId = '<lookup expression="fn.getConcept('CIEL:151849').id"/>';
                const noConceptId = '<lookup expression="fn.getConcept('CIEL:1066').id"/>';

                jq("span[id^='dead-or-alive-']").find("input[type='radio']").change(function(event) {
                    if (this.checked) {
                        // navigate up the DOM to the parent .fetus div for this baby
                        let parentDiv = jq(this).closest(".fetus");
                        if (parentDiv) {
                            //find the enclosed Register in EMR obs associated with this .fetus div
                            let nextRegisterBaby = jq(parentDiv).find("span[id^='register-baby-']");
                            if (nextRegisterBaby) {
                                let obsValue = jq(this).prop('value');
                                let isRegisteredInEMR = jq(nextRegisterBaby).find("input[type='radio'][value='" + noConceptId + "']");
                                if (isRegisteredInEMR) {
                                    if ( obsValue === aliveConceptId) {
                                        jq(isRegisteredInEMR).prop("checked", true);
                                    }
                                }
                            }
                        }
                    }
                });
            });
        </script>
    </ifMode>
    <ifMode mode="VIEW" include="false">

        <script type="text/javascript">
            jq(document).ready(function() {
                // Set up EDD and Gestational Age
                jq("#calculated-edd-and-gestational").hide();
                const lastLMP = '<lookup complexExpression="$fn.formatDate($fn.latestObs('CIEL:1427').getValueDatetime(), 'yyyy-MM-dd')"/>';
                const currentEncounterDate = '<lookup expression="encounter.getEncounterDatetime().getTime()"/>';
                const msgWeeks = '<uimessage code="pihcore.weeks"/>';
                if (typeof lastLMP !== "undefined" &amp;&amp; lastLMP !== null &amp;&amp; (lastLMP.length > 0)) {
                    const lastPeriodDate = new Date(lastLMP);
                    const gestAgeText = calculateGestationalDays(lastPeriodDate, currentEncounterDate, msgWeeks);
                    jq("#calculated-gestational-age-value").text(gestAgeText);
                    const edd = calculateExpectedDeliveryDate(lastPeriodDate);
                    const locale = window.sessionContext.locale || navigator.language;
                    jq("#calculated-edd").text((Intl.DateTimeFormat(locale, { dateStyle: "medium" })).format(edd));
                    jq("#calculated-edd-and-gestational").show();
                }
                // handlers for next and submit buttons, see nextAndSubmitButtons.js
                setUpNextAndSubmitButtons();

                //disable all radio buttons associated with the Register in EMR question
                // (this obs gets set automatically based on the other questions answers)
                jq("span[id^='register-baby']").find("input[type='radio']").attr("disabled", true);

                beforeSubmit.push(function() {
                    //re-enable the register patient in EMR obs so they could be saved
                    jq("span[id^='register-baby']").find("input[type='radio']").attr("disabled", false);
                    return true;

                });
            });
        </script>
    </ifMode>

    <script type="text/javascript">

        jq(document).ready(function() {

            const laborProgressEncounterType = 'ac5ec970-31b7-4659-9141-284bfbc13c69';
            const laborStartDatetimeConceptUuid = '<lookup expression="fn.getConcept('CIEL:163444').uuid"/>';
            const inducedConceptUuid         = '<lookup expression="fn.getConcept('CIEL:151750').uuid"/>';
            const inducedDatetimeConceptUuid = '<lookup expression="fn.getConcept('CIEL:168755').uuid"/>';
            const inductionMethodConceptUuid = '<lookup expression="fn.getConcept('CIEL:168751').uuid"/>';
            const mechInducConceptUuid = '<lookup expression="fn.getConcept('CIEL:168752').uuid"/>';
            const oxyConceptUuid = '<lookup expression="fn.getConcept('CIEL:168753').uuid"/>';
            const misoConceptUuid = '<lookup expression="fn.getConcept('CIEL:168754').uuid"/>';
            const yesConceptUuid = '<lookup expression="fn.getConcept('CIEL:1065').uuid"/>';
            const noConceptUuid  = '<lookup expression="fn.getConcept('CIEL:1066').uuid"/>';

            const contextPath = window.location.href.split('/')[3];
            const apiBaseUrl =  "/" + contextPath + "/ws/rest/v1";
            const options = { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric' };
            const monthOption = { month: 'short'};

            const patientUuid = '<lookup expression="patient.uuid"/>';
            let currentEncounterDate = new Date();
            let lookupEncDate = '<lookup expression="encounter.getEncounterDatetime().getTime()"/>';
            if ( lookupEncDate ) {
                currentEncounterDate = new Date(+lookupEncDate);
            }

            let serverEncounterDate = '<lookup complexExpression="#if ($encounter) #set ($encounterDate = $encounter.encounterDatetime) #else #set ($encounterDate = $visit.startDatetime) #end"/>';

            const visitUuid = '<lookup expression="encounter.getVisit().getUuid()"/>';

            jq.getJSON(apiBaseUrl + "/visit/" + visitUuid, {
                v: 'custom:(uuid,id,startDatetime,encounters:(uuid,display,encounterDatetime,encounterType:(uuid,name),obs:(uuid,display,concept:(uuid,display),obsDatetime,value)))'
            },
            function( data ) {
                if (data.encounters &amp;&amp; data.encounters.length &gt; 0) {
                    for (let index=0; index &lt; data.encounters.length; ++index) {
                        let encounter = data.encounters[index];
                        if (encounter.encounterType.uuid === laborProgressEncounterType) {
                            // From a Labor progress encounter on this visit
                            let encounterDate = new Date(encounter.encounterDatetime);
                            let month = new Intl.DateTimeFormat(undefined, monthOption).format(encounterDate);
                            jq("#lastLaborProgressEncounterDate").text(encounterDate.getDate() + "-" + month + "-" + encounterDate.getFullYear());
                            jq("#lastLaborProgressEncounterTime").text(encounterDate.toLocaleTimeString());

                            let last_labor_startdate = null;
                            let last_induced         = null;
                            let last_induced_datetime = null;
                            let last_induction_method = null;

                            if (encounter.obs &amp;&amp; encounter.obs.length &gt; 0) {
                                jq('#lastOnset').show();
                                for (let j=0; j &lt; encounter.obs.length; ++j) {
                                    let obs = encounter.obs[j];
                                    if (obs.concept.uuid === laborStartDatetimeConceptUuid) {
                                        if ( obs.valueDatetime ) {
                                            let laborStartDate = new Date(obs.valueDatetime);
                                            jq("#last_labor_startdate").text(laborStartDate.getDate() + " " + new Intl.DateTimeFormat(undefined, monthOption).format(periodDate) + " " + periodDate.getFullYear());
                                            jq("#last_labor_startdate").removeClass("emptyValue").addClass("value");
                                        }
                                    } else if (obs.concept.uuid === inducedConceptUuid) {
                                        if ( obs.valueCoded ) {
                                            switch ( obs.valueCoded.uuid ) {
                                                case yesConceptUuid:
                                                    jq("#yes_induction").text("[X] " + obs.valueCoded.display);
                                                    jq("#yes_induction").removeClass("emptyValue").addClass("value");
                                                    break;
                                                case noConceptUuid:
                                                    jq("#no_induction").text("[X] " + obs.valueCoded.display);
                                                    jq("#no_induction").removeClass("emptyValue").addClass("value");
                                                    break;
                                            }
                                        }
                                        jq("#last_induced").text(obs.value);
                                        jq("#last_induced").removeClass("emptyValue").addClass("value");
                                    } else if (obs.concept.uuid === inducedDatetimeConceptUuid) {
                                        if ( obs.valueDatetime ) {
                                            let inducedDatetime = new Date(obs.valueDatetime);
                                            jq("#last_induced_datetime").text(inducedDatetime.getDate() + " " + new Intl.DateTimeFormat(undefined, monthOption).format(periodDate) + " " + periodDate.getFullYear());
                                            jq("#last_induced_datetime").removeClass("emptyValue").addClass("value");
                                        }
                                    } else if (obs.concept.uuid === inductionMethodConceptUuid) {
                                        if ( obs.valueCoded ) {
                                            switch ( obs.valueCoded.uuid ) {
                                                case mechInducConceptUuid:
                                                    jq("#mech_induction").text("[X] " + obs.valueCoded.display);
                                                    jq("#mech_induction").removeClass("emptyValue").addClass("value");
                                                    break;
                                                case oxyConceptUuid:
                                                    jq("#oxy_induction").text("[X] " + obs.valueCoded.display);
                                                    jq("#oxy_induction").removeClass("emptyValue").addClass("value");
                                                    break;
                                                case misoConceptUuid:
                                                    jq("#miso_induction").text("[X] " + obs.valueCoded.display);
                                                    jq("#miso_induction").removeClass("emptyValue").addClass("value");
                                                    break;
                                            }
                                        }
                                    }
                                }
                                break;
                            }
                        }
                    }
                }
            });
        });
    </script>
    
