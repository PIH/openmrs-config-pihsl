                                    <p class="side-by-side">
                                        <label>
                                            <uimessage code="Birth Weight"/>
                                        </label>
                                        <obs conceptId="CIEL:5916" showUnits="true"/>
                                    </p>
                                </div>
                                <div>
                                    <p class="side-by-side">
                                        <label>
                                            <uimessage code="Birth length"/>
                                        </label>
                                        <obs conceptId="CIEL:163554" showUnits="true"/>
                                    </p>
                                </div>
                                <div>
                                    <p class="side-by-side">
                                        <label>
                                            <uimessage code="Head circumference"/>
                                        </label>
                                        <obs conceptId="CIEL:163555" showUnits="true"/>
                                    </p>
                                </div>
                            </div>

                            <div class="three-columns">
                                <!-- APGAR -->
                                <div class="apgar">
                                    <label>
                                        <uimessage code="pihcore.mch.apgarScore1"/>
                                    </label>

                                    <!-- APGAR at 1 minutes -->
                                    <obs conceptId="PIH:14419"/>
                                </div>
                                <div class="apgar">
                                    <label>
                                        <uimessage code="pihcore.mch.apgarScore"/>
                                    </label>

                                    <!-- APGAR at 5 minutes -->
                                    <obs conceptId="CIEL:159604"/>
                                </div>
                                <div class="apgar">
                                    <label>
                                        <uimessage code="pihcore.mch.apgarScore10"/>
                                    </label>

                                    <!-- APGAR at 10 minutes -->
                                    <obs conceptId="PIH:14785"/>
                                </div>
                            </div>
                            <div class="three-columns">
                                <div>
                                    <br/>
                                    <p class="side-by-side disabled">
                                        <label>
                                            <uimessage code="Is baby registered in EMR?"/>
                                        </label>
                                        <obs id="register-baby-{0}"
                                             conceptId="PIH:20150" style="radio"
                                             answerConceptIds="CIEL:1066,CIEL:1065,CIEL:1175"
                                             answerCodes="No,Yes,Do not register"
                                             class="disabled">
                                        </obs>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="three-columns in-line">
                            <div>
                                <p class="side-by-side">
                                    <label>
                                        <uimessage code="pihcore.fetalPresentation"/>
                                    </label>
                                    <br/>
                                    <obs id="fetus-presentation-{0}"
                                         conceptId="CIEL:160090" style="radio"
                                         answerSeparator="&lt;br /&gt;">
                                        <controls>
                                            <when value="CIEL:5622" thenDisplay="#other-presentation"/>
                                        </controls>
                                    </obs>
                                </p>
                                <div id="other-presentation-{0}">
                                    <label>
                                        <uimessage code="zl.ifOtherSpecify"/>
                                    </label>
                                    <obs conceptId="PIH:14414"/>
                                </div>
                            </div>

                            <div>
                                <p class="side-by-side">
                                    <label>
                                        <uimessage code="Method of delivery"/>
                                    </label>
                                    <br/>
                                    <obs conceptId="PIH:11663" style="radio"
                                         answerConceptIds="CIEL:1170,CIEL:155884,CIEL:159902"
                                         answerSeparator="&lt;br /&gt;"/>
                                </p>
                            </div>
                        </div>
                    </obsgroup>
                </span>
            </repeat>

            <br/>
            <button id="show-more-fetus-button" type="button" style="display:none">
                <uimessage code="pihcore.showMore"/>
            </button>
            <button id="show-less-fetus-button" type="button" style="display:none">
                <uimessage code="pihcore.showLess"/>
            </button>

            <br/><br/>
            <p class="date-one-line">
                <label>
                    <uimessage code="Duration of second stage" />
                </label>
                <span class="small">
                    <obs conceptId="PIH:20116" showUnits="true" />&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;
                    <obs conceptId="PIH:20117" showUnits="true" />
                </span>
            </p>
        </div>
    </section>

    <section id="stage3" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Third stage">
        <div class="section-container">
            <div class="two-columns">
                <div>
                    <p class="date-one-line">
                        <label>
                            <uimessage code="Blood loss before delivery" />
                        </label>
                        <span class="small">
                            <obs conceptId="PIH:20130" showUnits="true" />
                        </span>
                    </p>
                </div>
                <div>
                    <p class="date-one-line">
                        <label>
                            <uimessage code="Blood loss after delivery" />
                        </label>
                        <span class="small">
                            <obs conceptId="PIH:20131" showUnits="true" />
                        </span>
                    </p>
                </div>
            </div>

            <div class="two-columns">
                <div>
                    <h4>Placenta</h4>
                    <repeat>
                        <template>
                            <p class="side-by-side">
                                <label>
                                    <uimessage code="{name}" />
                                </label>
                                <br/>
                                <obs conceptId="{concept}"
                                     answerConceptIds="{answers}" answerCodes="{codes}"
                                     style="radio" answerSeparator="" />
                            </p>
                        </template>
                        <render concept="CIEL:163454" answers="CIEL:163455,CIEL:163456"
                                name="Visual examination of placenta completeness" codes="pihcore.complete,pihcore.incomplete" />
                    </repeat>

                    <p class="date-one-line">
                        <label>
                            <uimessage code="Placenta weight" />
                        </label>
                        <span class="small">
                            <obs conceptId="PIH:20122" showUnits="true" />
                        </span>
                    </p>

                    <p>
                        <obs conceptId="PIH:20152" labelCode="Placenta abnormality"  />
                    </p>
                </div>

                <div>
                    <h4>Umbilical cord</h4>
                    <p class="date-one-line">
                        <label>
                            <uimessage code="Cord length" />
                        </label>
                        <span class="small">
                            <obs conceptId="PIH:20129" showUnits="true" />
                        </span>
                    </p>

                    <p>
                        <obs conceptId="CIEL:168722" labelCode="Cord abnormality"  />
                    </p>
                </div>
            </div>
            <br/>

            <repeat>
                <template>
                    <p class="side-by-side">
                        <label>
                            <uimessage code="{name}" />
                        </label>
                        <br/>
                        <obs conceptId="{concept}"
                             answerConceptIds="{answers}" answerCodes="{codes}"
                             style="radio" answerSeparator="" />
                    </p>
                </template>
                <render concept="CIEL:163452" answers="CIEL:1065,CIEL:1066"
                        name="pihcore.fullAMTSL" codes="emr.yes,emr.no" />
             </repeat>

            <p class="date-one-line">
                <label>
                    <uimessage code="Duration of third stage" />
                </label>
                <span class="small">
                    <obs conceptId="PIH:20124" showUnits="true" />&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;
                    <obs conceptId="PIH:20125" showUnits="true" />
                </span>
            </p>

            <p class="date-one-line">
                <label>
                    <uimessage code="Total duration of labor" />
                </label>
                <span class="small">
                    <obs conceptId="CIEL:159616" showUnits="hours" />
                </span>
            </p>

            <p class="side-by-side">
                <label>
                    <uimessage code="Birth attendant" />
                </label>
                <obs id="birth-attendant" style="radio" conceptId="PIH:20118"
                     answerConceptIds="PIH:9719,PIH:20156,PIH:20157,PIH:20158,PIH:5622"
                     answerCodes="Doctor,SECHN Midwife,RN Midwife,ESO,other">
                    <controls>
                        <when value="CIEL:5622" thenDisplay="#other-ba"/>
                    </controls>
                </obs>
            </p>

            <div id="other-ba">
                <label>
                    <uimessage code="if other, specify type of birth attendant"/>
                </label>
                <obs conceptId="PIH:20119" style="text" />
                <br/>
            </div>

            <p class="side-by-side">
                <label>Perineal Tear</label>
                <obs conceptId="CIEL:165247" id="perineal tear" style="radio"
                     answerConceptIds="CIEL:165521,CIEL:165522,CIEL:165523,CIEL:165524"
                     answerLabels="1st degree,2nd degree,3rd degree,4th degree"/>
            </p>

            <div class="two-columns">
                <div>
                    <label>
                        <uimessage code="pihcore.consult.procedure" />
                    </label>
                    <repeat>
                        <template>
                            <obs conceptId="CIEL:1651" answerConceptId="{concept}" answerCodes="{name}"/>
                        </template>
                        <render concept="CIEL:5577"   name="Episiotomy" />
                        <render concept="CIEL:164157" name="Suture of perineum" />
                    </repeat>
                </div>
                <div>
                    <p class="date-one-line">
                        <label>
                            <uimessage code="Number of sutures" />
                        </label>
                        <span class="small">
                            <obs conceptId="PIH:20121"  />
                        </span>
                    </p>

                    <p class="side-by-side">
                        <obs conceptId="PIH:20126" labelCode="Sutured by" />
                    </p>
                </div>
            </div>

        </div>
    </section>

    <section id="perineum" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Perineum">
        <div class="section-container">
            <div>
                <p class="side-by-side">
                    <obs conceptId="PIH:20128" labelCode="Perineum comments" />
                </p>
            </div>
        </div>
    </section>

    <section id="documents" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Documents">
        <div class="section-container">
            <p>
                <label>
                    <uimessage code="Upload partogram"/>
                </label>
                <obs conceptId="PIH:13756" />
            </p>
        </div>
    </section>

    <ifMode mode="VIEW" include="false">
        <div id="buttons">
            <submit submitClass="confirm right" submitCode="mirebalais.save"/>
            <button type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>
